<%= form_for @new_bebe do |f| %>
    <div class="form-group">
        <%= f.label :nombre %>
        <%= f.text_field :nombre, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :sexo %>
        <%= f.select :sexo, options_for_select(['Hombre', 'Mujer']), {}, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.submit 'Guardar', class: 'btn btn-primary' %>
    </div>
<% end %>
